@{
    ViewData["Title"] = "Base de Conhecimento";
}

<div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
    <div>
        <h2 class="text-2xl font-bold text-gray-800">Base de Conhecimento</h2>
        <p class="text-gray-500">Central de ajuda, tutoriais e procedimentos técnicos.</p>
    </div>
    <a href="#" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 flex items-center shadow-sm transition-colors">
        <i class="bi bi-journal-plus me-2"></i> Criar Artigo
    </a>
</div>

<div class="bg-white rounded-xl shadow-sm border border-gray-100 mb-6 p-8">
    <div class="max-w-2xl mx-auto text-center">
        <h5 class="text-lg font-bold text-gray-600 mb-4">Como podemos ajudar hoje?</h5>
        <div class="relative flex items-center mb-3">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-gray-400">
                <i class="bi bi-search text-xl"></i>
            </span>
            <input type="text" class="w-full pl-12 pr-4 py-3 bg-white border border-gray-300 rounded-l-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-700" placeholder="Pesquisar por erro, software ou procedimento...">
            <button class="bg-blue-600 text-white px-6 py-3 rounded-r-lg hover:bg-blue-700 font-medium transition-colors">Buscar</button>
        </div>
        <div class="text-xs text-gray-400 mt-2">
            Sugestões:
            <a href="#" class="text-blue-500 hover:underline mx-1">Resetar Senha</a> &bull;
            <a href="#" class="text-blue-500 hover:underline mx-1">Configurar VPN</a> &bull;
            <a href="#" class="text-blue-500 hover:underline mx-1">Impressora</a>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="md:col-span-1">
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 h-full overflow-hidden">
            <div class="px-5 py-4 border-b border-gray-100 bg-gray-50">
                <h6 class="font-bold text-gray-700 flex items-center">
                    <i class="bi bi-folder me-2"></i>Categorias
                </h6>
            </div>
            <div class="divide-y divide-gray-100">
                <a href="#" class="flex justify-between items-center px-5 py-3 hover:bg-gray-50 text-gray-600 transition-colors">
                    <span>--</span>
                    <span class="bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded-full">0</span>
                </a>
            </div>
        </div>
    </div>

    <div class="md:col-span-3">
        <div class="bg-white rounded-xl shadow-sm border border-gray-100 h-full">
            <div class="px-6 py-4 border-b border-gray-100 flex justify-between items-center">
                <h6 class="font-bold text-gray-800">Artigos Recentes</h6>
                <select class="text-sm border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500 text-gray-600 py-1">
                    <option>Recentes</option>
                    <option>Mais Vistos</option>
                    <option>A-Z</option>
                </select>
            </div>

            <div class="p-10 text-center">
                <div class="opacity-50 mb-3 text-gray-400">
                    <i class="bi bi-journal-x text-5xl"></i>
                </div>
                <h6 class="font-bold text-gray-700 text-lg">Nenhum artigo encontrado</h6>
                <p class="text-sm text-gray-500">Seja o primeiro a compartilhar conhecimento.</p>
            </div>

            <div class="px-6 py-4 border-t border-gray-100 flex justify-center">
                <nav aria-label="Page navigation">
                    <ul class="inline-flex -space-x-px text-sm">
                        <li><a href="#" class="px-3 h-8 flex items-center justify-center text-gray-400 bg-white border border-gray-300 rounded-l-lg cursor-not-allowed"><i class="bi bi-chevron-left"></i></a></li>
                        <li><a href="#" class="px-3 h-8 flex items-center justify-center text-white bg-blue-600 border border-blue-600">1</a></li>
                        <li><a href="#" class="px-3 h-8 flex items-center justify-center text-gray-400 bg-white border border-gray-300 rounded-r-lg cursor-not-allowed"><i class="bi bi-chevron-right"></i></a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
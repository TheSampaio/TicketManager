<!DOCTYPE html>
<html lang="pt-br" class="h-full bg-gray-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Service Desk Moderno</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#0d6efd',
                        dark: '#212529',
                    },
                    spacing: {
                        '18': '4.5rem',
                    }
                }
            }
        }
    </script>

    <style>
        .no-scrollbar::-webkit-scrollbar {
            display: none;
        }

        .no-scrollbar {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
    </style>
</head>
<body class="h-full overflow-hidden font-sans text-gray-600 antialiased">

    <div class="flex h-screen w-full">

        <aside id="sidebar-wrapper"
               class="bg-dark fixed z-50 flex h-full w-[251px] -translate-x-full flex-col overflow-hidden border-r border-gray-700/50 text-white transition-all duration-300 ease-in-out md:relative md:translate-x-0">

            <div class="flex h-[60px] items-center overflow-hidden border-b border-gray-700/50 px-5 whitespace-nowrap">
                <i class="bi bi-hdd-network me-2 ml-[6px] min-w-[20px] text-xl"></i>
                <span class="sidebar-text pl-3 text-lg font-bold tracking-wide duration-200">Service Desk</span>
            </div>

            <div class="no-scrollbar no-scrollbar no-scrollbar flex flex-1 flex-col gap-1 overflow-y-auto px-2 py-4">
                <a href="/dashboard" class="sidebar-link group relative flex items-center overflow-hidden rounded-lg px-4 py-3 transition-colors">
                    <i class="bi bi-speedometer2 min-w-[24px] text-center text-lg" title="Dashboard"></i>
                    <span class="sidebar-text ms-3 whitespace-nowrap duration-200">Dashboard</span>
                </a>

                <a href="/tickets" class="sidebar-link group relative flex items-center overflow-hidden rounded-lg px-4 py-3 transition-colors">
                    <i class="bi bi-ticket-perforated min-w-[24px] text-center text-lg" title="Chamados"></i>
                    <span class="sidebar-text ms-3 whitespace-nowrap duration-200">Chamados</span>
                </a>

                <a href="/actives" class="sidebar-link group relative flex items-center overflow-hidden rounded-lg px-4 py-3 transition-colors">
                    <i class="bi bi-pc-display min-w-[24px] text-center text-lg" title="Ativos"></i>
                    <span class="sidebar-text ms-3 whitespace-nowrap duration-200">Ativos</span>
                </a>

                <a href="/users" class="sidebar-link group relative flex items-center overflow-hidden rounded-lg px-4 py-3 transition-colors">
                    <i class="bi bi-people min-w-[24px] text-center text-lg" title="Usuários"></i>
                    <span class="sidebar-text ms-3 whitespace-nowrap duration-200">Usuários</span>
                </a>

                <a href="/knowledge" class="sidebar-link group relative flex items-center overflow-hidden rounded-lg px-4 py-3 transition-colors">
                    <i class="bi bi-journal-text min-w-[24px] text-center text-lg" title="Base de Conhecimento"></i>
                    <span class="sidebar-text ms-3 whitespace-nowrap duration-200">Knowledge Base</span>
                </a>

                <a href="/settings" class="sidebar-link group relative flex items-center overflow-hidden rounded-lg px-4 py-3 transition-colors">
                    <i class="bi bi-gear min-w-[24px] text-center text-lg" title="Configurações"></i>
                    <span class="sidebar-text ms-3 whitespace-nowrap duration-200">Configurações</span>
                </a>
            </div>

            <div class="hidden border-t border-gray-700/50 p-2 md:block">
                <button id="sidebar-toggle-desktop" class="flex w-full items-center justify-start overflow-hidden rounded-lg px-4 py-3 text-gray-400 transition-colors hover:bg-white/10 hover:text-white">
                    <i id="toggle-icon" class="bi bi-chevron-left min-w-[24px] text-center text-lg"></i>
                    <span class="sidebar-text ms-3 text-sm whitespace-nowrap duration-200">Recolher Menu</span>
                </button>
            </div>
        </aside>

        <div id="mobile-overlay" class="glass-effect fixed inset-0 z-40 hidden bg-black/50 md:hidden" onclick="toggleSidebarMobile()"></div>

        <div class="flex h-screen min-w-0 flex-1 flex-col">
            <nav class="sticky top-0 z-30 flex h-[60px] items-center justify-between bg-white px-4 shadow-sm md:px-6">
                <div class="flex items-center">
                    <button id="mobile-toggle" class="me-4 text-gray-500 hover:text-gray-700 focus:outline-none md:hidden">
                        <i class="bi bi-list text-2xl"></i>
                    </button>
                    <h5 class="hidden text-lg font-medium text-gray-600 md:block">@ViewData["Title"]</h5>
                    <h5 class="text-lg font-medium text-gray-600 md:hidden">SD Moderno</h5>
                </div>
                <div class="flex items-center gap-4">
                    <div class="relative hidden md:block">
                        <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
                            <i class="bi bi-search text-gray-400"></i>
                        </div>
                        <input type="text" class="block w-64 rounded-lg border-none bg-gray-100 p-2 pl-10 text-sm text-gray-700 transition-all focus:ring-primary focus:bg-white focus:ring-2" placeholder="Buscar chamado (#ID)...">
                    </div>
                    <button class="relative text-gray-500 transition-colors hover:text-primary">
                        <i class="bi bi-bell text-xl"></i>
                        <span class="absolute top-0 right-0 block h-2.5 w-2.5 translate-x-1/4 -translate-y-1/4 transform rounded-full bg-red-500 ring-2 ring-white"></span>
                    </button>
                    <div class="relative ml-2">
                        <button id="user-menu-btn" class="bg-primary flex h-9 w-9 items-center justify-center rounded-full text-sm font-bold text-white shadow-sm transition-all hover:bg-blue-700 focus:ring-primary focus:ring-2 focus:ring-offset-2">AD</button>
                        <div id="user-dropdown" class="absolute right-0 z-50 mt-3 hidden w-72 origin-top-right transform rounded-lg border border-gray-100 bg-white py-2 shadow-xl transition-all">
                            <div class="flex items-center gap-3 border-b border-gray-100 px-4 py-3">
                                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-gray-500 font-bold text-white">AD</div>
                                <div><p class="text-sm font-semibold text-gray-800">Admin User</p><p class="text-xs text-gray-500">admin@empresa.com</p></div>
                            </div>
                            <ul class="py-1">
                                <li><a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:text-primary hover:bg-gray-50"><i class="bi bi-person me-2"></i> Meu Perfil</a></li>
                                <li><a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:text-primary hover:bg-gray-50"><i class="bi bi-ticket me-2"></i> Meus Chamados</a></li>
                                <li class="my-1 border-t border-gray-100"></li>
                                <li><a href="#" class="block px-4 py-2 text-sm text-red-600 hover:bg-red-50"><i class="bi bi-box-arrow-right me-2"></i> Sair</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <main class="relative w-full flex-1 overflow-y-auto bg-gray-50 p-4 md:p-6">
                @RenderBody()
            </main>

            <footer class="shrink-0 border-t border-gray-200 bg-white py-4 text-center text-sm text-gray-500">
                <div class="container mx-auto">&copy; 2026 - TicketSystem - <a href="#" class="text-primary hover:underline">Privacidade</a></div>
            </footer>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sidebar = document.getElementById('sidebar-wrapper');
            const toggleDesktopBtn = document.getElementById('sidebar-toggle-desktop');
            const toggleMobileBtn = document.getElementById('mobile-toggle');
            const mobileOverlay = document.getElementById('mobile-overlay');
            const sidebarTexts = document.querySelectorAll('.sidebar-text');
            const toggleIcon = document.getElementById('toggle-icon');

            // --- Lógica Desktop Ajustada ---
            let isCollapsed = false;

            toggleDesktopBtn.addEventListener('click', () => {
                isCollapsed = !isCollapsed;

                if (isCollapsed) {
                    // 1. Remove a largura expandida (250px)
                    sidebar.classList.remove('w-[251px]');
                    // 2. Adiciona a largura colapsada (w-18)
                    sidebar.classList.add('w-18');

                    // Esconde os textos
                    sidebarTexts.forEach(text => text.classList.add('hidden'));

                    // Muda ícone
                    toggleIcon.classList.remove('bi-chevron-left');
                    toggleIcon.classList.add('bi-chevron-right');

                } else {
                    // 1. Remove a largura colapsada (w-18)
                    sidebar.classList.remove('w-18');
                    // 2. Adiciona a largura expandida (250px)
                    sidebar.classList.add('w-[251px]');

                    // Mostra textos (com pequeno delay para o width expandir primeiro)
                    setTimeout(() => {
                         sidebarTexts.forEach(text => text.classList.remove('hidden'));
                    }, 50);

                    toggleIcon.classList.remove('bi-chevron-right');
                    toggleIcon.classList.add('bi-chevron-left');
                }
            });

            // --- Mobile Logic ---
            window.toggleSidebarMobile = () => {
                const isClosed = sidebar.classList.contains('-translate-x-full');
                if (isClosed) {
                    sidebar.classList.remove('-translate-x-full');
                    mobileOverlay.classList.remove('hidden');
                } else {
                    sidebar.classList.add('-translate-x-full');
                    mobileOverlay.classList.add('hidden');
                }
            };

            toggleMobileBtn.addEventListener('click', (e) => { e.stopPropagation(); window.toggleSidebarMobile(); });

            // --- Dropdown Logic ---
            const userBtn = document.getElementById('user-menu-btn');
            const userDropdown = document.getElementById('user-dropdown');
            userBtn.addEventListener('click', (e) => { e.stopPropagation(); userDropdown.classList.toggle('hidden'); });

            document.addEventListener('click', (e) => {
                if (!userBtn.contains(e.target) && !userDropdown.contains(e.target)) userDropdown.classList.add('hidden');
                if (window.innerWidth < 768 && !sidebar.contains(e.target) && !toggleMobileBtn.contains(e.target)) {
                    sidebar.classList.add('-translate-x-full');
                    mobileOverlay.classList.add('hidden');
                }
            });

            // --- Highlight Logic ---
            const currentPath = window.location.pathname.toLowerCase();
            document.querySelectorAll('.sidebar-link').forEach(link => {
                const linkPath = link.getAttribute('href').toLowerCase();
                if (currentPath === linkPath || (linkPath !== '/' && currentPath.startsWith(linkPath))) {
                    link.classList.add('bg-primary', 'text-white');
                    link.classList.remove('text-gray-300', 'hover:bg-white/10');
                    const indicator = document.createElement('div');
                    indicator.className = 'absolute left-0 top-0 bottom-0 w-1 bg-white rounded-r-md';
                    link.appendChild(indicator);
                } else {
                    link.classList.add('text-gray-300', 'hover:bg-white/10', 'hover:text-white');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>